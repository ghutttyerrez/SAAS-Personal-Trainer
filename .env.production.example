# ==========================================
# Environment Variables - Production
# ==========================================

# Application
NODE_ENV=production
PORT=3001

# Database
DATABASE_URL=postgresql://username:password@production-db-host:5432/personal_trainer_prod
POSTGRES_DB=personal_trainer_prod
POSTGRES_USER=pt_prod_user
POSTGRES_PASSWORD=super_secure_production_password

# Redis
REDIS_URL=redis://production-redis-host:6379

# JWT Secrets (MUST be secure and unique!)
JWT_SECRET=production-jwt-secret-super-secure-minimum-64-characters-long
JWT_REFRESH_SECRET=production-refresh-secret-super-secure-minimum-64-characters-long
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=https://yourapp.com,https://www.yourapp.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/app/uploads

# Logging
LOG_LEVEL=warn
LOG_DIR=/app/logs

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Docker Registry
REGISTRY=ghcr.io
IMAGE_NAME=saas-personal-trainer
VERSION=latest

# SSL/TLS
SSL_CERT_PATH=/etc/ssl/certs/cert.pem
SSL_KEY_PATH=/etc/ssl/private/key.pem

# External Services
SMTP_HOST=smtp.production.com
SMTP_PORT=587
SMTP_USER=noreply@yourapp.com
SMTP_PASS=production_smtp_password
FROM_EMAIL=noreply@yourapp.com

# Webhooks
WEBHOOK_SECRET=production_webhook_secret

# Security
HELMET_CSP_DIRECTIVES=default-src 'self'; script-src 'self' 'unsafe-inline'
BCRYPT_ROUNDS=12

# Performance
CACHE_TTL=3600
MAX_POOL_SIZE=20
QUERY_TIMEOUT=30000

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Grafana
GRAFANA_PASSWORD=secure_grafana_password

# Prometheus
PROMETHEUS_RETENTION=200h
