# ==========================================
# Environment Variables - Staging
# ==========================================

# Application
NODE_ENV=staging
PORT=3001

# Database
DATABASE_URL=postgresql://username:password@staging-db-host:5432/personal_trainer_staging
POSTGRES_DB=personal_trainer_staging
POSTGRES_USER=pt_user
POSTGRES_PASSWORD=secure_staging_password

# Redis
REDIS_URL=redis://staging-redis-host:6379

# JWT Secrets (Generate strong secrets!)
JWT_SECRET=staging-jwt-secret-minimum-32-characters-long
JWT_REFRESH_SECRET=staging-refresh-secret-minimum-32-characters-long
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=https://staging.yourapp.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/app/uploads

# Logging
LOG_LEVEL=info
LOG_DIR=/app/logs

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Docker Registry
REGISTRY=ghcr.io
IMAGE_NAME=saas-personal-trainer
VERSION=staging

# SSL/TLS
SSL_CERT_PATH=/etc/ssl/certs/cert.pem
SSL_KEY_PATH=/etc/ssl/private/key.pem

# External Services
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@yourapp.com
SMTP_PASS=smtp_password
FROM_EMAIL=noreply@yourapp.com

# Webhooks
WEBHOOK_SECRET=staging_webhook_secret
